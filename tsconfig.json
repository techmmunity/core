{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"rootDir": "src",
		"lib": ["ES2020", "ES2020.String"],
		"declaration": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"incremental": true,
		"baseUrl": "src",
		"paths": {
			"core/*": ["./*"]
		}
	},
	"include": ["src"]
}

